<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kitchenv12">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LogInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="i.layout.MenuActivity" />

        <activity
            android:name="i.layout.WorkListActivity"
            android:label="@string/title_activity_main3"
            android:parentActivityName="i.layout.SpisokProduktov"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="i.layout.MenuActivity" />
        </activity>
        <activity android:name=".AboutActivity"
            android:label="О программе"
            />
        <activity
            android:name="i.layout.SpisokProduktov"
            android:label="@string/title_activity_spisok_produktov"
            android:parentActivityName="i.layout.MenuActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="i.layout.MenuActivity" />
        </activity>

    </application>

</manifest>
